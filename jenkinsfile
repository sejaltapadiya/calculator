pipeline {
    agent any

    environment {
        DOCKER_IMAGE_NAME = 'calculator-image'
        GITHUB_REPO_URL = 'https://github.com/sejaltapadiya/calculator.git'
    }

    stages {
        stage('Checkout') {
            steps {
                script {
                    // Checkout the code from the GitHub repository
                    git branch: 'main', url: "${GITHUB_REPO_URL}"
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Build Docker image
                    docker.build("${DOCKER_IMAGE_NAME}", './app/calculator').with {
                        echo it.buildLog()
                    }
                }
            }
        }


        stage('Push Docker Images') {
            steps {
                script {
                    docker.withRegistry('', 'DockerHubCred') {
                        sh 'docker tag calculator-image sejal28/calculator-image:latest'
                        sh 'docker push sejal28/calculator-image:latest'  // Corrected typo in the image name
                    }
                }
            }
        }


   stage('Run Ansible Playbook') {
            steps {
                script {
                    ansiblePlaybook(
                        playbook: 'deploy.yml',
                        inventory: 'inventory'
                     )
                }
            }
        }

    }
}
