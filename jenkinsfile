pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                // Checkout the source code from the repository
                git 'https://github.com/sejaltapadiya/calculator.git'

                // Build your application (replace with your build command)
                docker build -t calculator
            }
        }

        stage('Deploy') {
            steps {
                // Deploy your application (replace with your deploy command)
                sh 'your-deploy-command'
            }
        }
    }

    post {
        success {
            echo 'Pipeline succeeded! Any additional success steps can go here.'
        }
        failure {
            echo 'Pipeline failed! Any additional failure steps can go here.'
        }
    }
}
